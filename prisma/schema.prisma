datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

// Prisma Client Generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
  interface            = "sync"
}

// Модель пользователя
model User {
  id        String   @id @default(uuid())
  login     String   @unique
  password  String
  clientId  Int
  subnets   Subnet[]
  role      Role
}

enum Role {
  Admin
  Employee
}

// Модель подсети
model Subnet {
  id         String    @id @default(uuid())
  name       String
  subnetIp   String
  subnetMask Int // (0-32)
  clients    Client[]

  User User[]
}

// Модель клиента
model Client {
  id             String  @id @default(uuid())
  name           String
  clientIp       String
  publicKey      String
  privateKeyRef  String
  isEnabled      Boolean @default(true)
  subnet        Subnet  @relation(fields: [subnetId], references: [id])
  subnetId      String
}